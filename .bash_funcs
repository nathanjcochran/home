#!/bin/bash

dev_dir="$HOME/dev/timescale"

dev () {
    cd "${dev_dir}/${1}"
    clear
}

_dev () {
    local cur="${COMP_WORDS[COMP_CWORD]}"
    if [[ $cur = /* ]] || [[ $cur = ~* ]]; then
        return
    fi
    cd "${dev_dir}"
    compopt -o filenames 2>/dev/null
    COMPREPLY=( $(compgen -d -- "$cur") $(compgen -d -- "popsql-$cur") )
}

complete -F _dev dev

pop_dir="$HOME/dev/timescale/popsql"

pop () {
    cd "${pop_dir}/${1}"
    clear
}

_pop () {
    local cur="${COMP_WORDS[COMP_CWORD]}"
    if [[ $cur = /* ]] || [[ $cur = ~* ]]; then
        return
    fi
    cd "${pop_dir}"
    compopt -o filenames 2>/dev/null
    COMPREPLY=( $(compgen -d -- "packages/popsql-$cur"))
}

complete -F _pop pop

fix_dbt_keys() {
    pushd "$HOME/dev/popsql/popsql/.docker/dbt/30000/keys"
    cp "$HOME"/dbt-keys/* ./
    popd
}
